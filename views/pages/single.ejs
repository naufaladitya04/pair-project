<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/headerWithLogin'); %></header>

    <main id="animation-zoom-out" class="pt-5 pl-5">
      <div class="row">
        <div class="col-3 pl-5">
          <h1 class="text-white pb-3"><%= thisCategory %></h1>
          <!-- <h3 class="text-master">All Classes Categories</h3>

          <div class="pb-4">
            <ul class="list-group">
              <% categories.forEach(function(e) { %>
              <li class="list-group-item list-group-item-danger text-center animated pulse joom-out font-weight-bold w-50"><%= e.name %></li>
              <% }); %>
            </ul>
          </div> -->
        </div>
        <div class="col-9">
          <div class="row justify-content-around">
            <% newCourses.forEach(function(e) { %>
            <div class="col-6 my-5">
              <div class="card bg-dark text-white">
                <img src="<%= e.urlImg %>" alt="" />
                <div class="card-img-overlay">
                  <div class="description">
                    <h5 class="card-title text-center"><%= e.master %></h5>
                    <p class="card-text"><%= e.title %></p>
                    <% if (data.role === 'Subscriber' ) { %>
                    <button type="button" class="btn btn-primary">Get Courses</button>
                    <% } %> <% if (data.role === 'Admin' ) { %>
                    <button type="button" class="btn btn-success video-btn" data-toggle="modal" data-src="<%= e.urlVideo %>" data-target="#myModal">Watch</button>
                    <a href="/categories/<%= e.id %>/edit" class="btn btn-warning">Edit</a>
                    <button type="button" class="btn btn-danger">Delete</button>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>

    <%- include('../partials/modalVideo'); %>
  </body>
  <script for="javascript" src="/js/modalVideo.js"></script>
</html>
