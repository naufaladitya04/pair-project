<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>

    <header><%- include('../partials/headerWithLogin'); %></header>

    <main id="animation-zoom-out">
      <form class="w-50 mx-auto h-50" action="/categories/add" method="post">
        <div class="py-5">
          <h1 class="text-master font-lato-regular">Add Categories</h1>
        </div>
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label text-white">Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" />
          </div>
        </div>
        <div class="form-group row">
          <label for="urlVideo" class="col-sm-2 col-form-label text-white">URL Video</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="urlVideo" placeholder="urlVideo" name="urlVideo" />
          </div>
        </div>

        <button type="submit" class="btn btn-primary mb-2">Submit</button>

      </form>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>

</html>
